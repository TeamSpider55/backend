{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": ["error"],
        "react/jsx-filename-extension": [1, { "extensions": [".jsx", ".tsx"] }],
        "no-unused-vars": "warn",
        "linebreak-style": "off",
        "import/extensions": "off",
        "arrow-body-style": "off"
    }
}